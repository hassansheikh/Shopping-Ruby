
<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Products</h1>
  </div>
</div>

<div class="row">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            DataTables Advanced Tables
        </div>
        <!-- /.panel-heading -->
<div class="panel-body">
    <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <tr class="odd gradeX">
                    <td><%= product.name %></td>
                    <td><%= product.category.title %></td>
                    <td><%= product.price %></td>
                    <td class="center"> <%= product.status %></td>
                    <td style="padding: 15px"><%= link_to 'Show', admin_product_path(product)%>  |  <%= link_to 'Destroy', admin_product_path(product), method: :delete, data: {confirm: 'Are you Sure'} %>  |  <%= link_to 'Edit', edit_admin_product_path(product)%></td>
                    
                </tr>
                <% end %>
            </tbody>
        </table>
   </div>
                                
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<script src="<%= request.base_url %>/admin/js/dataTables/jquery.dataTables.min.js"></script>
<script src="<%= request.base_url %>/admin/js/dataTables/dataTables.bootstrap.min.js"></script>


        <!-- Page-Level Demo Scripts - Tables - Use for reference -->
        <script>
            $(document).ready(function() {
                $('#dataTables-example').DataTable({
                        responsive: true
                });
            });
        </script>