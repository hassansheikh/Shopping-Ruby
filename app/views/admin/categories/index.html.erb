<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Categories</h1>
  </div>
</div>


<div class="row">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <%= link_to "Add New Category", new_admin_category_path %>
        </div>
        <!-- /.panel-heading -->
<div class="panel-body">
    <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
      <tr>
        <th>Title</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
 
  
  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.title %></td>
      <td ><%= category.status %></td>
      <td><%= link_to 'Show', admin_category_path(category)%>  |  <%= link_to 'Edit', edit_admin_category_path(category)%>  |  <%= link_to 'Destroy', admin_category_path(category), method: :delete, data: {confirm: 'Are you Sure'} %></td>
      
    </tr>
    <% end %>
  </tbody>
  
            </tbody>
        </table>
   </div>
                                
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<script src="<%= request.base_url %>/admin/js/dataTables/jquery.dataTables.min.js"></script>
<script src="<%= request.base_url %>/admin/js/dataTables/dataTables.bootstrap.min.js"></script>


        <!-- Page-Level Demo Scripts - Tables - Use for reference -->
        <script>
            $(document).ready(function() {
                $('#dataTables-example').DataTable({
                        responsive: true
                });
            });
        </script>
