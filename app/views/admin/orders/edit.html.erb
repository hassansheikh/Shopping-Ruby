 <div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Ordered Product Detail</h1>
  </div>
</div>
<div class='col-md-6'>
<h2>Buyer Name: </h2><h4><%= @order.name %></h4>
<h2>Buyer Number: </h2><h4><%= @order.number %></h4>
<h2>Shipping Address: </h2><h4><%= @order.address %></h4>

<%= form_with(model: [:admin,@order],url: admin_order_path(@order.id), local: true) do |form| %>


  <p>
    <label >Status</label>
    <label class="checkbox-inline i-checks"> <%= form.radio_button :status, 'checkout', :class=>'icheckbox_square-green' %> Checkout </label>
    <label class="checkbox-inline i-checks"> <%= form.radio_button :status, 'ready', :class=>'icheckbox_square-green' %> Ready </label>  
    <label class="checkbox-inline i-checks"> <%= form.radio_button :status, 'delivered', :class=>'icheckbox_square-green' %> Delivered </label>  
    <label class="checkbox-inline i-checks"> <%= form.radio_button :status, 'recevied', :class=>'icheckbox_square-green' %> Recevied </label>  
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
</div>

<div class='col-md-6'>

<% @order.cartitems.each do |item| %>
<div class='cart-header' id='<%= item.id %>'>
   <div class='close1' id='close<%= item.id %>' %> </div>
   <div class="cart-sec simpleCart_shelfItem">
      <div class="cart-item cyc">
         <%= image_tag(item.Product.images.first, :class=>'img-responsive') %>
      </div>
       <div class="cart-item-info">
      <h3><a href="#"> <%= item.Product.name %> </a></h3>
      <ul class="qty">
        <li><p>Price : <%= item.Product.price %></p></li>
      </ul>
          
       </div>
                
    </div>
</div>
<% end %>

</div>


 
<%= link_to 'Back', users_path %>