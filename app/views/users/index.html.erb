
<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Users</h1>
  </div>
</div>


<div class="row">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
           New User
        </div>
        <!-- /.panel-heading -->
<div class="panel-body">
    <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
 
  
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td><%= link_to 'Edit', edit_user_path(user)%>  |  <%= link_to 'Destroy', user_path(user), method: :delete, data: {confirm: 'Are you Sure'} %></td>
    </tr>
  <% end %>
  </tbody>
  
            </tbody>
        </table>
   </div>
                                
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<script src="<%= request.base_url %>/admin/js/dataTables/jquery.dataTables.min.js"></script>
<script src="<%= request.base_url %>/admin/js/dataTables/dataTables.bootstrap.min.js"></script>


        <!-- Page-Level Demo Scripts - Tables - Use for reference -->
        <script>
            $(document).ready(function() {
                $('#dataTables-example').DataTable({
                        responsive: true
                });
            });
        </script>



