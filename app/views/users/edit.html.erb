<h1>Edit User</h1>
 
<%= form_with(model: @user, local: true) do |form| %>
 
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this User from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <label >Status</label>
    <label class="checkbox-inline i-checks"> <%= form.radio_button :role, 'user', :class=>'icheckbox_square-green' %> User </label>
    <label class="checkbox-inline i-checks"> <%= form.radio_button :role, 'admin', :class=>'icheckbox_square-green' %> Admin </label>  

  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', users_path %>